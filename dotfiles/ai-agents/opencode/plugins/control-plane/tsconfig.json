{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "outDir": "dist",
    "rootDir": "src",

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "types": ["node"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
  },
  "include": ["src"],
}
