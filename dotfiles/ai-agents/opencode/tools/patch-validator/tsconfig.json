{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "outDir": "dist",

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "types": ["node"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
  },
  "include": ["index.ts"],
}
