{
  ////////////////////////////////////////////////////////////
  // PROVIDER
  ////////////////////////////////////////////////////////////

  "provider": {
    "openai": {
      "api_key_env": "OPENAI_API_KEY"
    }
  },

  ////////////////////////////////////////////////////////////
  // MODEL
  ////////////////////////////////////////////////////////////

  "model": "gpt-5.2-codex",

  // OpenCode does not expose reasoning_effort.
  // Keep output tight via max_output_tokens + temperature=0.
  "max_output_tokens": 1500,
  "temperature": 0,
  "top_p": 1,

  ////////////////////////////////////////////////////////////
  // EXECUTION & SAFETY
  ////////////////////////////////////////////////////////////

  "approval_policy": "on-request",
  "sandbox_mode": "workspace-write",

  "workspace": {
    "network_access": true
  },

  ////////////////////////////////////////////////////////////
  // COST CONTROL
  ////////////////////////////////////////////////////////////

  // Cap tool output retained in history
  "tool_output_token_limit": 3000,

  // Limit project context ingestion
  "project_doc_max_bytes": 12288,

  // Disable automatic web search
  "web_search": false,

  ////////////////////////////////////////////////////////////
  // RETRY CONTROL
  ////////////////////////////////////////////////////////////

  "request_max_retries": 1,
  "stream_max_retries": 1,

  ////////////////////////////////////////////////////////////
  // FEATURES
  ////////////////////////////////////////////////////////////

  "features": {
    "skills": true,
    "shell": true,
    "multi_agent": false,
    "search": false
  },

  ////////////////////////////////////////////////////////////
  // MCP SERVERS
  ////////////////////////////////////////////////////////////

  "mcp": {
    "context7": {
      "command": "bunx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "startup_timeout_sec": 30,
      "tool_timeout_sec": 30
    }

    // Optional Chrome DevTools MCP
    // "chrome": {
    //   "command": "bunx",
    //   "args": ["chrome-devtools-mcp@latest"],
    //   "startup_timeout_sec": 10,
    //   "tool_timeout_sec": 30
    // }
  },

  ////////////////////////////////////////////////////////////
  // LOGGING
  ////////////////////////////////////////////////////////////

  "log_dir": "~/.opencode/logs"
}
